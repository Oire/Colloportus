{
    "name": "oire/colloportus",
    "description": "Password hashing and encryption library.",
    "type": "library",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Oire/php-code-style"
        }
    ],
    "require": {
        "php": ">=7.1.2",
        "oire/base64": "^1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9",
        "oire/php-code-style": "dev-master"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Andre Polykanine also known as Menelion Elensúlë",
            "email": "ap@oire.me",
            "homepage": "https://github.com/Menelion",
            "role": "developer"
        }
    ],
    "support": {
        "issues":   "https://github.com/Oire/Colloportus/issues",
        "source":   "https://github.com/Oire/Colloportus"
    },
    "autoload": {
        "psr-4": {
            "Oire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oire\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
